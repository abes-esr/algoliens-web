{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    {% include "admin/_breadcrumb.html.twig" %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Admin</h1>
    <h2>Accès par ILN / Chantier</h2>
    <table class="table">
        <tr>
            <th>Code</th>
            <th>Label</th>
            <th>RCR</th>
            <th>Admin</th>
            <th>Accès public</th>
        </tr>
        {% for iln in ilns %}
            <tr>
                <td>{{ iln.code }}</td>
                <td>{{ iln.label }}</td>
                <td>{{ iln.rcrs | length }}</td>
                <td><a href="{{ url('admin_iln', {code: iln.code}) }}">admin</a></td>
                <td><a href="{{ url('view_iln', {code: iln.code, secret: iln.secret}) }}">public</a></td>
            </tr>
        {% endfor %}
    </table>
    <h2>Derniers imports</h2>
    <table class="table">
        {% include "admin/_batch_header.html.twig" %}
    {% for import in imports %}
            {% include "admin/_batch.html.twig" with {'batch': import}%}
    {% endfor %}
    </table>

</div>
{% endblock %}
