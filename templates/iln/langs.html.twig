{% extends "includes/base.html.twig" %}
{% block header %}
{% endblock %}

{% block body %}
    {{ include("includes/_breadcrumb.html.twig", {'page': 'iln_langs'}) }}
    <table class="table">
        <tr>
            <th>Code langue</th>
            <th>Nom</th>
            <th>Notices disponibles</th>
        </tr>
        {% for lang in langs %}
            <tr>
                <td>{{ lang.code }}</td>
                <td>{{ lang.langlabel }}</td>
                <td>
                    <a href="{{ url("view_record_lang", {ilnCode: iln.code, ilnSecret: iln.secret, lang: lang.code}) }}">{{ lang.nb }}</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}